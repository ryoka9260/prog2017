class Dice:
  face_num = 6
  def shoot(self):
    return random.randint(1, self.face_num)
#空行

import random
aDice = Dice()#クラスをもとにオブジェクトを作る
aDice.shoot()＃オブジェクトを使う



#169
class Dice:
  def __init__(self, val):
    self.face_num = val
  def shoot(self):
    return random.randint(1, self.face_num)
#空行
aDice = Dice(12)
aDice.shoot()

