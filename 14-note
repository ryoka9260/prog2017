turtle.forward(100)
turtle.left(90)
turtle.forward(100)


def rect(x, y, a):
  turtle.up()
  turtle.home()
  turtle.forward(x)
  turtle.left(90)
  turtle.foerward(x)
  turtle.down()
  for i in range(4):
    turtle.forward(a)
    turtle.left(-90)
#空行

turtle.clear()
rect(10,20,100)


